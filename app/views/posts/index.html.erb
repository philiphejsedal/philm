<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Posts <small>List of all posts</small></h1>
</div>

<% @posts.each do |post| %>
  <div class="jumbotron" style="max-width: 500px; margin: 80px auto">
    <h3>Posted by <%= link_to post.user.username, post.user %></h3>
    <%= image_tag post.post_image(:large), class: 'img-responsive' %>
    <p><%= post.body %></p>
  </div>
<% end %>